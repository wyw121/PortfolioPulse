{
  // GitHub Copilot 配置
  "chat.promptFiles": true,
  "chat.instructionsFilesLocations": [
    ".github/instructions"
  ],
  "chat.promptFilesLocations": [
    ".github/prompts"
  ],
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.reviewSelection.instructions": [
    { "file": ".github/instructions/backend-development.instructions.md" },
    { "file": ".github/instructions/frontend-development.instructions.md" },
    { "file": ".github/instructions/database-design.instructions.md" }
  ],
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "使用 Conventional Commits 格式" },
    { "text": "提交消息使用中文描述" },
    { "text": "包含具体的变更范围和影响" }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    { "text": "包含功能变更概述" },
    { "text": "列出关键技术变更点" },
    { "text": "添加测试覆盖说明" },
    { "text": "包含部署注意事项" }
  ],

  // VS Code 性能优化设置
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,

  // 文件监听限制
  "files.hotExit": "onExitAndWindowClose",
  "files.autoSave": "onFocusChange",
  "files.watcherExclude": {
    "**/target/**": true,
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/dist/**": true,
    "**/.next/**": true
  },

  // 搜索优化
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true
  },

  // Git 优化
  "git.autofetch": false,
  "git.decorations.enabled": false,

  // 禁用不必要的功能以提升性能
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.startupEditor": "none",

  // Rust 特定优化
  "rust-analyzer.lens.enable": false,
  "rust-analyzer.hover.actions.enable": false,
  "rust-analyzer.inlayHints.enable": false,
  "rust-analyzer.cargo.buildScripts.enable": false,
  "rust-analyzer.checkOnSave.allTargets": false,
  "rust-analyzer.procMacro.enable": false,
  "rust-analyzer.completion.limit": 50,

  // TypeScript 性能优化
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": false,
  "typescript.surveys.enabled": false,
  "typescript.disableAutomaticTypeAcquisition": true
}
