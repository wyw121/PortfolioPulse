# 数据库配置
DATABASE_URL=mysql://username:password@localhost:3306/portfolio_pulse

# PortfolioPulse 环境配置模板
# 复制此文件为 .env 并填写实际值

# ===========================================
# 应用基础配置
# ===========================================
NODE_ENV=production
RUST_LOG=info

# ===========================================
# 数据库配置
# ===========================================
# MySQL 数据库连接字符串
DATABASE_URL=mysql://portfoliopulse:portfoliopulse_2024@mysql:3306/portfolio_pulse

# 数据库凭据（用于 Docker Compose）
DB_HOST=mysql
DB_PORT=3306
DB_NAME=portfolio_pulse
DB_USER=portfoliopulse
DB_PASSWORD=portfoliopulse_2024
DB_ROOT_PASSWORD=root_password_2024

# ===========================================
# API 配置
# ===========================================
# 前端 API 地址（浏览器访问）
NEXT_PUBLIC_API_URL=http://localhost:8000

# 内部服务通信地址
INTERNAL_API_URL=http://backend:8000

# 前端服务地址
FRONTEND_URL=http://localhost:3000

# ===========================================
# GitHub 集成
# ===========================================
# GitHub Personal Access Token (需要 repo 权限)
GITHUB_TOKEN=ghp_your_github_token_here

# GitHub 用户名
GITHUB_USERNAME=your_username

# GitHub API 基础 URL
GITHUB_API_URL=https://api.github.com

# ===========================================
# 安全配置
# ===========================================
# JWT 密钥（生产环境必须更改）
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS 允许的域名
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# ===========================================
# 缓存配置
# ===========================================
# Redis 连接字符串（可选）
REDIS_URL=redis://redis:6379

# 缓存过期时间（秒）
CACHE_TTL=3600

# ===========================================
# 监控和日志
# ===========================================
# 启用应用性能监控
APM_ENABLED=false
APM_SERVICE_NAME=portfoliopulse

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# 部署环境特定配置
# ===========================================

# 开发环境示例
# NODE_ENV=development
# NEXT_PUBLIC_API_URL=http://localhost:8000
# DATABASE_URL=mysql://portfoliopulse:password@localhost:3306/portfolio_pulse_dev
# RUST_LOG=debug

# 生产环境示例
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://api.your-domain.com
# DATABASE_URL=mysql://portfoliopulse:secure_password@prod-db:3306/portfolio_pulse
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# 后端配置
RUST_LOG=info
LOG_LEVEL=info

# 安全配置
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# Vercel 配置（如果使用 Vercel 部署前端）
VERCEL_TOKEN=your_vercel_token

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Redis 配置（可选，用于缓存）
REDIS_URL=redis://localhost:6379

# 可选：Redis 缓存配置
REDIS_URL=redis://localhost:6379

# 可选：邮件服务配置 (用于通知)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# 可选：文件上传配置
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760

# 开发环境标识
NODE_ENV=development
RUST_ENV=development
